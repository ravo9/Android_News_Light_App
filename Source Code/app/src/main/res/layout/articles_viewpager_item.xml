<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewpager_item_container"
        android:layout_width="@dimen/articles_viewpager_item_width"
        android:layout_height="@dimen/articles_viewpager_item_height"
        android:background="@drawable/background_badge"
        android:elevation="@dimen/articles_viewpager_item_elevation"
        android:clipToPadding="false">

    <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextAlternative"
            android:padding="@dimen/articles_viewpager_item_padding"
            android:layout_marginBottom="@dimen/articles_viewpager_item_margin_bottom"
            android:textSize="@dimen/articles_viewpager_item_text_size_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>